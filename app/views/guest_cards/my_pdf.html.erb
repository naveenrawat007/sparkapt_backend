<style type="text/css">
  body{
    padding: 30px;
    font-size: 18px;
  }
  h2{
    border-bottom: 1px solid
  }
  .width-30{
    width:30%;
    float: left;
  }
  .width-40{
    width:40%;
    float: left;
  }
  .width-50{
    width:50%;
    float: left;
  }
  .width-60{
    width:60%;
    float: left;
  }
  .width-70{
    width:70%;
    float: left;
  }
  .width-100{
    width:100%;
    float: left;
  }

  .img-fluid{
    width: 100%;
    display: inline-block;
    margin: 0 auto;
  }

  .d-flex{
    display: flex;
  }
  .align-items-center{
    align-items: center;
  }
  .align-items-end{
    align-items: flex-end;
  }
  .mb-5{
    margin-bottom: 3rem;
  }
</style>

<div class="width-100 d-flex align-items-end mb-5">
  <div class="width-70">
    <h3>Date of Inquiry: <span><%= guest&.created_at.strftime("%b %d, %Y") %></span></h3>
  </div>

  <div class="width-30">
    <%= wicked_pdf_image_tag (Rails.application.secrets.host + user.try(:logo).try(:url)), :style=>"display:inline-block; width:285px; max-width:100%; height:auto;" %>
  </div>
</div>

<div class="width-100 mb-5">
  <h2>Personal Information</h2>

  <div class="width-60">
    <p>Name: <span><%= guest&.first_name %> <%= guest&.last_name %></span></p>
    <p>Email: <span><%= guest&.email %></span></p>
    <p>Reason For Move: </p>
  </div>

  <div class="width-40">
    <p>Phone: <span><%= guest&.phone %></span></p>
    <p>Employer:</p>
    <p>Budget: <span><%= guest&.budget %></span></p>
  </div>
</div>

<div class="width-100 mb-5">
  <h2>Preferred Living Arrangements</h2>

  <p># of Bedrooms: &nbsp; &nbsp; &nbsp; # of Baths:</p>
  <p>Intended Move Date: <span><%= guest&.move_in.strftime("%b %d, %Y") %></span></p>
  <p># of Pets: <span><%= guest&.pet_number %></span> Type: <span><%= guest&.pet_type %></span></p>
</div>

<div class="width-100 mb-5">
  <h2>Special Requirements</h2>
  <p><%= guest&.preferences %></p>
</div>

<div class="width-100">
  <h3><%= @user&.signature %></h3>
  <h3>512-378-3873</h3>
  <h3>locatingaustin@gmail.com</h3>
</div>
